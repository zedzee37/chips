{
  "schemaVersion": 1,
  "id": "chips",
  "version": "${version}",

  "name": "Chips",
  "description": "A simple mod that allows for a sub-grid of blocks for finer details in builds.",
  "authors": [
    "zedzee"
  ],
  "contact": {},

  "license": "GPL-3.0",
  "icon": "assets/chips/icon.png",
  "accessWidener": "chips.accesswidener",
  "environment": "*",
  "entrypoints": {
    "client": ["zedzee.github.io.chips.client.ChipsClient"],
    "main": ["zedzee.github.io.chips.Chips"]
  },

  "mixins": [
    "chips.mixins.json"
    ,{
      "config": "chips.client.mixins.json",
      "environment": "client"
    }
  ],

  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  }
}
